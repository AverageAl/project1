<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ZIP_Code_5_Digits</fullName>
    <active>true</active>
    <errorConditionFormula>NOT( REGEX(  Zip_Code__c  , &quot;\\D*?(\\d\\D*?){5}&quot;) )</errorConditionFormula>
    <errorDisplayField>Zip_Code__c</errorDisplayField>
    <errorMessage>Zip Code must contain 5 digits.</errorMessage>
</ValidationRule>
