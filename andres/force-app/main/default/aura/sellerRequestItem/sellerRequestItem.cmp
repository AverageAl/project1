<!-- Recreating Project 1's Sellers_Page.page functionality using Lightning Aura Web Components -->
<!-- Jeremy Davis -->

<aura:component>
    <aura:attribute name="sellerRequest" type="Seller_Request__c"/>
    <lightning:card title="{!v.sellerRequest.Name}" iconName="standard:scan_card">   
        <p class="slds-text-heading_medium slds-p-horizontal_small">
           Thanks for the offer! We'll talk!
        </p>
        <p class="slds-text-heading_medium slds-p-horizontal_small">
           Asking Price: <lightning:formattednumber value="{!v.sellerRequest.Asking_Price__c}" style="currency"/>
        </p>
    </lightning:card>
</aura:component>
